@model IEnumerable<Classroom>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Classroom List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Classroom" asp-action="CreateUpdate" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Classroom
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Teacher
			</th>
            <th>
                Course
			</th>
            <th>
                ClassCode
			</th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="25%">
                    @obj.Teacher.FullName
				</td>
                <td width="25%">
                    @obj.Course.Name
				</td>
                <td width="25%">
                    @obj.ClassCode
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Classroom" asp-action="CreateUpdate" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Classroom" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
			</tr>
        }
    </tbody>

</table>
</div>