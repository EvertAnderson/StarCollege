@model StarCollege.Models.ViewModels.ClassroomVM

<form method="post" asp-action="Delete">
	<input asp-for="Classroom.Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Teacher</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Classroom.ClassCode"></label>
			<input asp-for="Classroom.ClassCode" disabled class="form-control" />
			<span asp-validation-for="Classroom.ClassCode" class="text-danger"></span>
		</div>
		<div class="mb-3 col-6">
			<label asp-for="Classroom.CourseId"></label>
			<select asp-for="Classroom.CourseId" disabled asp-items="@Model.CourseList" class="form-select">
			</select>
			<span asp-validation-for="Classroom.CourseId" class="text-danger"></span>
		</div>
		<div class="mb-3 col-6">
			<label asp-for="Classroom.TeacherId"></label>
			<select asp-for="Classroom.TeacherId" disabled asp-items="@Model.TeacherList" class="form-select">
			</select>
			<span asp-validation-for="Classroom.TeacherId" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Teacher" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>