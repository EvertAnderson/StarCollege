@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Course List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Course" asp-action="CreateUpdate" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Course
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
			</th>
            <th>
                No. Credits
			</th>
            <th>
                No. Teachers
            </th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="25%">
                    @obj.Name
				</td>
                <td width="25%">
                    @obj.Credits
				</td>
                <td width="20%">
                    @(obj.Classrooms != null ? obj.Classrooms.GroupBy(x => x.TeacherId).Count() : 0)
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Course" asp-action="CreateUpdate" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Course" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
			</tr>
        }
    </tbody>

</table>
</div>